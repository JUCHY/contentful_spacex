{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard",
        "prettier",
        "airbnb",
        "plugin:jsx-a11y/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "babel",
        "react-hooks",
        "jsx-a11y"
    ],
    "settings": {
        "import/resolver": {
            "alias": {
                "map": [
                ["@components", "./components/"],
                ["@utils/*", "./utils/"],
                ["@video/*", "./video/"]
                ],
                "extensions": [".js", ".jsx"]
            }
        }
    },
    "rules": {
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
    }
}
